<section>
    <article class="container">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <th>Photo</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Designation</th>
                    <th>Phone</th>
                    
                    <th>Address</th>
                    <th>Alternative Address</th>
                    <th>Gender</th>
                    <th>Country</th>
                    <th>Pincode</th>
                    <th>Landmark</th>
                    <th>Details</th>
                </thead>
                
                    {{#each profile}}
                    <tbody>
                    <tr>
                        {{#if this.photo}}
                        <td><img src={{removeFirst6Char photo.0.path}} alt="image"> </td>
                        {{else}}
                        <td><img src="../../images/default.jpg" alt="img"> </td>
                        {{/if}}
                   
                    <td>{{firstname}}</td>
                    <td>{{lastname}}</td>
                    <td>{{designation}}</td>
                    <td>{{phone}}</td>
                    <td>{{address}}</td>
                    <td>{{alt_address}}</td>
                    <td>{{gender}}</td>
                    <td>{{country}}</td>
                    <td>{{pincode}}</td>
                    <td>{{landmark}}</td>
                    <td><a href="/profile/user-profile/{{_id}}" class="badge badge-primary p-2">Details</a> </td>
                    </tr>
                    </tbody>
                    
                    {{else}}
                    {{/each}}
                
            </table>
    </article>
</section>